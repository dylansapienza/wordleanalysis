    "import pandas\n",
    "import random\n",
    "import numpy as np\n",
    "import itertools\n",
    "\n",
    "with open('valid_guesses.csv') as f:\n",
    "    guesses = f.read().splitlines()\n",
    "with open('valid_solutions.csv') as f:\n",
    "    solutions = f.read().splitlines()\n"
